<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <link rel="stylesheet" href="css/pesquisa.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PixelCats</title>
</head>

<body>
    <header id="top">
        <a href="#"><img src="../img/LogoRosa.png" alt="Gato" class="logo"></a>
        <a href="#"><img src="../img/TextoLogoRosa.png" alt="PixelCat" class="logo"></a>
        <nav>
            <a href="#" class="tab"><img src="../../../img/icHomeW.png" alt=""></a>
            <a href="#" class="tab"><img src="../../../img/icStoreW.png" alt=""></a>
            <a href="#" class="tab"><img src="../../../img/icCartW.png" alt=""></a>
        </nav>
        <div class="pesquisa">
            <input type="text" name="query" id="query">
        </div>
        <nav>
            <a href="#" class="tab"><img src="../../../img/icUserW.png" alt="" id="user"></a>
        </nav>
    </header>

    <main>
        <h2 class="titulo">Resultados da pesquisa para "<%= searchTerm %>":</h2>
        <% result.forEach(function(item) { %>
              <div class="product">
                <img src="../img/<%= item.imagem_prod %>" alt="Foto do produto">
                 <h3>
                 <%= item.nome_prod %>
                 </h3>
                 <p>Plataforma: <%= item.plataforma_prod %></p>
                     <% if(item.precoDesconto_prod){ %>
                         <p style="text-decoration: line-through;">R$<%= item.preco_prod%></p>
                         <h3><strong>R$<%= item.precoDesconto_prod %></strong></h3>
                    <% }else{ %>
                     <h3>R$<%= item.preco_prod %></h3>
                     <% } %>
                     </h3>
                 <form action="/add" method="post">
                     <input type="hidden" name="id_prod" value="<%= item.id_prod %>">
                     <input type="hidden" name="nome_prod" value="<%= item.nome_prod %>">
                     <input type="hidden" name="preco_prod" value="<%= item.preco_prod %>">
                     <input type="hidden" name="precoDesconto_prod" value="<%= item.precoDesconto_prod %>">
                     <input type="hidden" name="plataforma_prod" value="<%= item.plataforma_prod %>">
                     <input type="hidden" name="imagem_prod" value="<%= item.imagem_prod %>">
                     <input type="hidden" name="quantidade_prod" value="1">
                     <input type="submit" value="Adicionar ao carrinho" name="botao" class="botao">
                 </form>
                 </div>
             <% }) %>

    </main>

</body>

<footer>
    <p>&copy; 2023 PixelCats. Todos os direitos reservados.</p>
</footer>

<script src="script.js"></script>

</html>